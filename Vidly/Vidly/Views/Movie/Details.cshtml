@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details for @Model.Name</h2>


<table>
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
            <th>Released Date</th>
            <th>Added Date</th>
            <th>Stock Availability</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
       
            <tr>
                <td> @Model.Name </td>
                <td> @Model.Genre.Name </td>
                <td> @Model.ReleaseDate</td>
                <td> @Model.DateAdded</td>
                <td> @Model.Stock</td>
            </tr>
        
    </tbody>

</table>

