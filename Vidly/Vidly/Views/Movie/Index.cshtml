@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table>
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td> @Html.ActionLink(movie.Name, "Details", "Movie", new { id = movie.Id }, null) </td>
            <td> @movie.Genre.Name </td>
        </tr>
        }
    </tbody>
   
</table>
